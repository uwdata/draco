{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "strict": false,
    "outDir": "./build",
    "inlineSourceMap": true,
    "importHelpers": true,
    "suppressImplicitAnyIndexErrors": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "types": ["jest", "node"]
  },
  "files": ["src/index.ts"],
  "include": ["./global.d.ts"],
  "exclude": ["**/*.js"]
}
